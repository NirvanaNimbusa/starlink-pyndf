*   WORD arithmetic functions.
      INTEGER*2 NUM_ADDW
      INTEGER*2 NUM_SUBW
      INTEGER*2 NUM_MULW
      INTEGER*2 NUM_DIVW
      INTEGER*2 NUM_IDVW
      INTEGER*2 NUM_PWRW
      INTEGER*2 NUM_NEGW
 
 
*   WORD functions with a single WORD argument.
      INTEGER*2 NUM_SQRTW
      INTEGER*2 NUM_LOGW
      INTEGER*2 NUM_LG10W
      INTEGER*2 NUM_EXPW
      INTEGER*2 NUM_ABSW
      INTEGER*2 NUM_NINTW
      INTEGER*2 NUM_INTW
 
 
*   WORD functions with two WORD arguments.
      INTEGER*2 NUM_MINW
      INTEGER*2 NUM_MAXW
      INTEGER*2 NUM_DIMW
      INTEGER*2 NUM_MODW
      INTEGER*2 NUM_SIGNW
 
 
*   Logical functions comparing two WORD numbers.
      LOGICAL NUM_EQW
      LOGICAL NUM_NEW
      LOGICAL NUM_GTW
      LOGICAL NUM_GEW
      LOGICAL NUM_LTW
      LOGICAL NUM_LEW
 

 
